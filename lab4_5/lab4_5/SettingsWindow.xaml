<Window x:Name="Settings" x:Class="lab4_5.SettingsWindow" Style="{DynamicResource WindowStyle}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab4_5"
        mc:Ignorable="d"
        Title="Профиль"
        Width="400" Height="450"
        MinWidth="350" MinHeight="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Icon="D:\лабораторные работы\ооп\lab4_5\Resources\icon.jpg">

    <Viewbox Stretch="Uniform" StretchDirection="Both">
        <Grid Margin="20">
            <Border Style="{DynamicResource MainBorderStyle}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Профиль"
                           Style="{DynamicResource BaseTextBlockStyle}"
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10" />

                    <Separator Style="{DynamicResource BaseSeparatorStyle}" Margin="0,0,0,10"/>

                    <Image Source="{Binding CurrentUser.Pfp}"/>
                    <TextBlock Text="{Binding CurrentUser.Username}"/>

                    <Button Content="{DynamicResource EditProfile}" Style="{DynamicResource BaseButtonStyle}" FontSize="12"/>
                    <Button Content="{DynamicResource MenuItem_ChangeLanguage}" Style="{DynamicResource BaseButtonStyle}" FontSize="12" />
                    <Button Content="{DynamicResource MenuItem_ChangeTheme}" Style="{DynamicResource BaseButtonStyle}" FontSize="12" Command="{Binding ChangeThemeCommand}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Viewbox>

</Window>
