<Window x:Class="lab4_5.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab4_5"
        mc:Ignorable="d"
        Title="Window4" Height="450" Width="800">
    <Viewbox Stretch="Uniform" StretchDirection="Both">
        <Grid Margin="20">
            <Border BorderThickness="1" BorderBrush="{DynamicResource AccentColor}" CornerRadius="10" Padding="20">
                <StackPanel HorizontalAlignment="Center">

                    <TextBlock Text="{DynamicResource SimpleMenu_Title}" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="{DynamicResource AccentColor}" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,10" />

                    <Separator Margin="0,0,0,10" Background="{DynamicResource AccentColor}"/>

                    <Button Content="{DynamicResource SimpleMenu_Profile}" 
                            Margin="0,10"
                            Width="200" Height="40"
                            Background="{DynamicResource AccentColor}"
                            Foreground="White"
                            BorderThickness="0"
                            FontWeight="SemiBold"
                            Command="{Binding OpenProfileCommand}"/>

                    <Button Content="{DynamicResource SimpleMenu_ChangeTheme}" 
                            Margin="0,10"
                            Width="200" Height="40"
                            Background="{DynamicResource AccentColor}"
                            Foreground="White"
                            BorderThickness="0"
                            FontWeight="SemiBold"
                            Command="{Binding ChangeThemeCommand}"/>

                </StackPanel>
            </Border>
        </Grid>
    </Viewbox>
</Window>
