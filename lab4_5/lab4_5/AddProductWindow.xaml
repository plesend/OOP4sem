<Window x:Class="lab4_5.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab4_5"
        mc:Ignorable="d"
        Title="Добавление товара"
        Width="450" Height="580"
        MinWidth="400" MinHeight="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Viewbox Stretch="Uniform" StretchDirection="Both">
        <Grid Margin="20">
            <Border BorderThickness="1" BorderBrush="#A578BB" CornerRadius="10" Padding="20">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Добавление товара"
                               Style="{StaticResource BaseTextBlockStyle}"
                               FontSize="24"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10" />

                    <Separator Style="{StaticResource BaseSeparatorStyle}" Margin="0,0,0,10"/>

                    <TextBlock Text="Название" Style="{StaticResource BaseTextBlockStyle}"/>
                    <TextBox x:Name="ProdName" Width="220" Text="{Binding Name}" Style="{StaticResource BaseTextBoxStyle}"/>

                    <TextBlock Text="Тип товара" Style="{StaticResource BaseTextBlockStyle}" Margin="0,10,0,2"/>
                    <TextBox x:Name="ProdType" Width="220" Text="{Binding Type}" Style="{StaticResource BaseTextBoxStyle}"/>

                    <TextBlock Text="Бренд" Style="{StaticResource BaseTextBlockStyle}" Margin="0,10,0,2"/>
                    <TextBox x:Name="ProdBrand" Width="220" Text="{Binding Brand}" Style="{StaticResource BaseTextBoxStyle}"/>

                    <TextBlock Text="Цена" Style="{StaticResource BaseTextBlockStyle}" Margin="0,10,0,2"/>
                    <TextBox x:Name="ProdPrice" Width="220" Text="{Binding PriceText}" Style="{StaticResource BaseTextBoxStyle}"/>

                    <TextBlock Text="Путь к изображению" Style="{StaticResource BaseTextBlockStyle}" Margin="0,10,0,2"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                        <TextBox x:Name="ProdPhotoPath" Width="150" Text="{Binding ImagePath}" Margin="0,0,10,0" Style="{StaticResource BaseTextBoxStyle}"/>
                        <Button Content="Обзор"
                                Width="70"
                                Style="{StaticResource SpecialButtonStyle}"
                                Command="{Binding BrowseImageCommand}" Height="30"/>
                    </StackPanel>

                    <Button Content="Добавить"
                            Width="150"
                            Height="40"
                            Style="{StaticResource SpecialButtonStyle}"
                            Command="{Binding AddProductCommand}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Viewbox>
</Window>
