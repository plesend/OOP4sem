<Window x:Class="lab4_5.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab4_5"
        mc:Ignorable="d"
        Title="Добавление товара"
        Width="450" Height="580"
        MinWidth="400" MinHeight="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Viewbox Stretch="Uniform" StretchDirection="Both">
        <Grid Margin="20">
            <Border BorderThickness="1" BorderBrush="#A578BB" CornerRadius="10" Padding="20">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Добавление товара"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#A578BB"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10" />

                    <Separator Margin="0,0,0,10" Background="#A578BB"/>

                    <TextBlock Text="Название" FontSize="14" Foreground="#A578BB" Margin="0,5,0,2"/>
                    <TextBox x:Name="ProdName" Width="220" Text="{Binding Name}"/>

                    <TextBlock Text="Тип товара" FontSize="14" Foreground="#A578BB" Margin="0,10,0,2"/>
                    <TextBox x:Name="ProdType" Width="220" Text="{Binding Type}"/>

                    <TextBlock Text="Бренд" FontSize="14" Foreground="#A578BB" Margin="0,10,0,2"/>
                    <TextBox x:Name="ProdBrand" Width="220" Text="{Binding Brand}"/>

                    <TextBlock Text="Цена" FontSize="14" Foreground="#A578BB" Margin="0,10,0,2"/>
                    <TextBox x:Name="ProdPrice" Width="220" Text="{Binding PriceText}"/>

                    <TextBlock Text="Путь к изображению" FontSize="14" Foreground="#A578BB" Margin="0,10,0,2"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                        <TextBox x:Name="ProdPhotoPath" Width="150" Text="{Binding ImagePath}" Margin="0,0,10,0"/>
                        <Button Content="Выбрать"
                                Width="70"
                                Background="#A578BB"
                                Foreground="White"
                                Command="{Binding BrowseImageCommand}"/>
                    </StackPanel>

                    <Button Content="Добавить"
                            Margin="0,25"
                            Width="150"
                            Height="30"
                            Foreground="White"
                            Background="#A578BB"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Command="{Binding AddProductCommand}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Viewbox>
</Window>
