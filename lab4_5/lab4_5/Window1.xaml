<Window x:Class="lab4_5.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab4_5"
        mc:Ignorable="d"
        Title="Добавление товара" Height="580" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="47*"/>
            <ColumnDefinition Width="113*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="113*"/>
            <ColumnDefinition Width="47*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="172*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>

        <Border Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="1" BorderThickness="1" BorderBrush="#A578BB" CornerRadius="8">
            <StackPanel>
                <TextBlock Height="50" Text="Добавление товара" HorizontalAlignment="Center" Padding="10" FontSize="20" Foreground="#A578BB" />
                <Line StrokeThickness="1" Stroke="#A578BB" X1="0" Y1="0" X2="190" Y2="0" HorizontalAlignment="Center"/>
                <TextBlock Text="Название" Margin="0,10" HorizontalAlignment="Center" Foreground="#A578BB" FontSize="15"/>
                <TextBox x:Name="ProdName" Height="20" Width="200"/>
                <TextBlock Text="Тип товара" Margin="0,10" HorizontalAlignment="Center" Foreground="#A578BB" FontSize="15"/>
                <TextBox x:Name="ProdType" Height="20" Width="200"/>
                <TextBlock Text="Бренд" Margin="0,10" HorizontalAlignment="Center" Foreground="#A578BB" FontSize="15"/>
                <TextBox x:Name="ProdBrand" Height="20" Width="200"/>
                <TextBlock Text="Цена" Margin="0,10" HorizontalAlignment="Center" Foreground="#A578BB" FontSize="15"/>
                <TextBox x:Name="ProdPrice" Height="20" Width="200"/>
                <TextBlock Text="Путь к изображению" Margin="0,10" HorizontalAlignment="Center" Foreground="#A578BB" FontSize="15"/>
                <TextBox x:Name="ProdPhotoPath" Height="20" Width="150" Margin="0,0,10,0"/>
                <Button Content="Выбрать файл" Foreground="white" Margin="0,10" Background="#A578BB" Height="20" Width="200" Click="BrowseImage_Click"/>
                <Button Content="Добавить"  Margin="0,25" HorizontalAlignment="Center" Foreground="White" Background="#A578BB" Width="120" BorderThickness="0" Padding="0, 5" Click="AddProductDefinition_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
