<Window x:Class="lab4_5.ProductViewWindow"
        Style="{DynamicResource WindowStyle}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab4_5"
        mc:Ignorable="d"
        Title="Детали товара"
        Width="800" Height="600"
        MinWidth="600" MinHeight="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Icon="D:\лабораторные работы\ооп\lab4_5\Resources\icon.jpg">

    <Window.DataContext>
        <local:ProductViewViewModel />
    </Window.DataContext>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Название товара -->
        <TextBlock Grid.Column="0" Grid.ColumnSpan="2"
                   Text="{Binding Product.Name}"
                   FontSize="28" FontWeight="Bold"
                   Foreground="#A578BB"
                   Margin="0 0 0 10"
                   TextWrapping="Wrap"/>

        <!-- Изображение -->
        <Border Grid.Row="1" Grid.Column="0" 
                BorderBrush="LightGray" BorderThickness="1" CornerRadius="8" 
                Margin="0,0,20,0" Background="White">
            <Image Source="{Binding Product.ImagePath}" 
                   Stretch="Uniform"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   />
        </Border>

        <!-- Описание и детали -->
        <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Top">
            <TextBlock Text="Описание:" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
            <TextBlock Text="{Binding Product.Description}" 
                       TextWrapping="Wrap" 
                       Foreground="Gray"
                       Margin="0,0,0,15"/>

            <TextBlock Text="Цена:" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
            <TextBlock Text="{Binding Product.Price, StringFormat=C}" 
                       FontSize="20" Foreground="#A578BB" Margin="0,0,0,20"/>

            <Button Content="Купить"
                    Width="120"
                    Height="40"
                    Style="{DynamicResource SpecialButtonStyle}"
                    Command="{Binding BuyCommand}"/>
        </StackPanel>

        <!-- Кнопка закрытия -->
        <Button Grid.Row="2" Grid.Column="1" Content="Закрыть"
                Width="100" Height="30"
                HorizontalAlignment="Right" Margin="0,20,0,0"
                Style="{DynamicResource BaseButtonStyle}"
                Command="{Binding CloseCommand}" />
    </Grid>
</Window>
