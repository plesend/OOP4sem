<Window x:Name="Authorization" x:Class="lab4_5.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab4_5"
        mc:Ignorable="d"
        Title="Авторизация"
        Width="400" Height="450"
        MinWidth="350" MinHeight="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Icon="D:\лабораторные работы\ооп\lab4_5\Resources\icon.jpg">

        

    <Viewbox Stretch="Uniform" StretchDirection="Both">
        <Grid Margin="20">
            
            
            <Border BorderThickness="1" BorderBrush="#A578BB" CornerRadius="10" Padding="20">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Авторизация"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#A578BB"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10" />

                    <Separator Margin="0,0,0,10" Background="#A578BB"/>

                    <TextBlock Text="Логин" 
                               FontSize="14"
                               Foreground="#A578BB"
                               Margin="0,5,0,2" />
                    <TextBox x:Name="Login" Height="20" Width="200"
                             Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Login}" Value="">
                                        <Setter Property="BorderBrush" Value="Red"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <TextBlock Text="Пароль"
                               FontSize="14"
                               Foreground="#A578BB"
                               Margin="0,10,0,2" />
                    <TextBox x:Name="Password" Height="20" Width="200" Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Login}" Value="">
                                        <Setter Property="BorderBrush" Value="Red"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>



                    <Button Content="Войти"
        Margin="0,20,0,10"
        Width="160"
        Height="30"
        Foreground="White"
        Background="#A578BB"
        FontWeight="Bold"
        BorderThickness="0"
        Command="{Binding LoginCommand}"
        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}">

                        <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Width"
                                     To="180" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>

                            <EventTrigger RoutedEvent="Button.MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Width"
                                     To="160" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                    </Button>

                    <!--<Button Content="Нет аккаунта? Зарегистрируйся."
                            HorizontalAlignment="Center"
                            Foreground="White"
                            Background="#A578BB"
                            Width="220"
                            Height="28"
                            BorderThickness="0"
                            FontSize="12"
                            Padding="0, 4"
                            />-->
                </StackPanel>
            </Border>
        </Grid>
    </Viewbox>
</Window>
