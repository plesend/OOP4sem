<Window x:Class="lab4_5.ManageOrdersWindow"
        Style="{DynamicResource WindowStyle}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Обзор заказов"
        Width="1200" Height="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Icon="D:\лабораторные работы\ооп\lab4_5\Resources\icon.jpg">

    <Grid Margin="20">
        <TabControl>
            <TabItem Header="Заказы">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="10">
                        <Button Content="Удалить заказ"
                                Command="{Binding DeleteOrderCommand}"
                                Margin="0,0,10,0"/>
                        <Button Content="Подтвердить заказ"
                                Command="{Binding ConfirmOrderCommand}"/>
                    </StackPanel>

                    <DataGrid ItemsSource="{Binding Orders}"
                              SelectedItem="{Binding SelectedOrder, Mode=TwoWay}"
                              AutoGenerateColumns="True"
                              IsReadOnly="True"
                              Margin="10"
                              RowHeight="35"
                              FontSize="14"
                              Grid.Row="1"/>
                </Grid>
            </TabItem>

            <TabItem Header="Товары в заказах">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="Поиск по OrderID:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>
                        <TextBox Text="{Binding SearchOrderId, UpdateSourceTrigger=PropertyChanged}"
                                 Width="100"
                                 Margin="0,0,10,0"/>
                        <Button Content="Найти"
                                Command="{Binding FilterCommand}"/>
                        <Button Content="Сброс"
                                Command="{Binding ResetCommand}"
                                Margin="10,0,0,0"/>
                    </StackPanel>

                    <DataGrid ItemsSource="{Binding OrderItems}"
                              AutoGenerateColumns="True"
                              IsReadOnly="True"
                              Margin="10"
                              RowHeight="35"
                              FontSize="14"
                              Grid.Row="1"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
