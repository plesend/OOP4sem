<Window x:Class="lab4_5.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab4_5"
        mc:Ignorable="d"
        Title="Регистрация" Height="400" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="177*"/>
            <RowDefinition Height="137*"/>
            <RowDefinition Height="35*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="300*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="1" Grid.Row="1" BorderThickness="1" BorderBrush="#A578BB" CornerRadius="8" Grid.RowSpan="2">
            <StackPanel>
                <TextBlock Height="50" Text="Регистрация" HorizontalAlignment="Center" Padding="10" FontSize="20" Foreground="#A578BB" />
                <Line StrokeThickness="1" Stroke="#A578BB" X1="0" Y1="0" X2="190" Y2="0" HorizontalAlignment="Center"/>
                <TextBlock Text="Логин" Margin="0,10" HorizontalAlignment="Center" Foreground="#A578BB" FontSize="15"/>
                <TextBox Height="20" Width="200" Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="Пароль" Margin="0,10" HorizontalAlignment="Center" Foreground="#A578BB" FontSize="15"/>
                <TextBox Height="20" Width="200" Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="Подтверждение пароля" Margin="0,10" HorizontalAlignment="Center" Foreground="#A578BB" FontSize="15"/>
                <TextBox Height="20" Width="200" Text="{Binding ConfirmPassword, UpdateSourceTrigger=PropertyChanged}"/>
                <Button 
    Content="Зарегистрироваться"  
    Margin="0,25"
    HorizontalAlignment="Center"
    Foreground="White"
    Background="#A578BB"
    Width="130"
    BorderThickness="0"
    Padding="0,5"
    Command="{Binding RegisterCommand}"
    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
