<Window x:Class="lab4_5.EditProductWindow" 
        Style="{DynamicResource WindowStyle}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab4_5"
        mc:Ignorable="d"
        Title="Редактирование товара"
        Width="450" Height="640"
        MinWidth="400" MinHeight="580"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Viewbox Stretch="Uniform" StretchDirection="Both">
        <Grid Margin="20">
            <Border Style="{DynamicResource MainBorderStyle}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Редактирование товара"
                               Style="{StaticResource BaseTextBlockStyle}"
                               FontSize="24"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10" />

                    <Separator Style="{StaticResource BaseSeparatorStyle}" Margin="0,0,0,10"/>

                    <TextBlock Text="Название" Style="{StaticResource BaseTextBlockStyle}"/>
                    <TextBox Width="220" Text="{Binding Product.Name, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource BaseTextBoxStyle}"/>

                    <TextBlock Text="Тип товара" Style="{StaticResource BaseTextBlockStyle}" Margin="0,10,0,2"/>
                    <TextBox Width="220" Text="{Binding Product.Description, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource BaseTextBoxStyle}"/>

                    <TextBlock Text="Бренд" Style="{StaticResource BaseTextBlockStyle}" Margin="0,10,0,2"/>
                    <TextBox Width="220" Text="{Binding Product.Brand, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource BaseTextBoxStyle}"/>

                    <TextBlock Text="Состав" Style="{StaticResource BaseTextBlockStyle}" Margin="0,10,0,2"/>
                    <TextBox Width="220" Text="{Binding Product.Composition, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" Height="60" TextWrapping="Wrap" Style="{StaticResource BaseTextBoxStyle}"/>

                    <TextBlock Text="Цена" Style="{StaticResource BaseTextBlockStyle}" Margin="0,10,0,2"/>
                    <TextBox Width="220" Text="{Binding PriceText, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource BaseTextBoxStyle}"/>

                    <TextBlock Text="Путь к изображению" Style="{StaticResource BaseTextBlockStyle}" Margin="0,10,0,2"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                        <TextBox Width="150" Text="{Binding ImagePath, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,10,0" Style="{StaticResource BaseTextBoxStyle}"/>
                        <Button Content="Обзор"
                                Width="70"
                                Style="{StaticResource SpecialButtonStyle}"
                                Command="{Binding BrowseImageCommand}" Height="30"/>
                    </StackPanel>

                    <Button Content="Сохранить"
                            Width="150"
                            Height="40"
                            Style="{StaticResource SpecialButtonStyle}"
                            Command="{Binding SaveProductCommand}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Viewbox>
</Window>
