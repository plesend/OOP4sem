<Window x:Class="lab4_5.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:lab4_5"
        xmlns:sys="clr-namespace:System;assembly=mscorlib" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        Title="Оформление заказа"
        Width="450" Height="800"
        WindowStartupLocation="CenterScreen"
        Background="White"
        ResizeMode="NoResize"
        FontFamily="Segoe UI">

    <Window.Resources>
        <local:DeliveryToVisibilityConverter x:Key="DeliveryToVisibilityConverter"/>
        <local:PickupToVisibilityConverter x:Key="PickupToVisibilityConverter"/>
        <local:StringEqualsConverter x:Key="StringEqualsConverter"/>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Оформление заказа"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="#A578BB"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,25"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Top">

            <TextBlock Text="ФИО" FontWeight="SemiBold" Foreground="#A578BB" Margin="0,0,0,5"/>
            <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                     Height="30" FontSize="14" Padding="5" BorderBrush="#A578BB" BorderThickness="1" Background="White" Margin="0,0,0,15"/>

            <TextBlock Text="Телефон" FontWeight="SemiBold" Foreground="#A578BB" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                     Height="30" FontSize="14" Padding="5" BorderBrush="#A578BB" BorderThickness="1" Background="White" Margin="0,0,0,15"/>

            <TextBlock Text="Способ оплаты" FontWeight="SemiBold" Foreground="#A578BB" Margin="0,0,0,5"/>
            <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                <RadioButton Content="Наличными курьеру"
                 GroupName="PaymentMethodGroup"
                 IsChecked="{Binding Path=PaymentMethod, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Наличными курьеру, Mode=TwoWay}"
                 FontSize="14"
                 Foreground="#333"
                 Margin="0,2"/>
                <RadioButton Content="Картой курьеру"
                 GroupName="PaymentMethodGroup"
                 IsChecked="{Binding Path=PaymentMethod, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Картой курьеру, Mode=TwoWay}"
                 FontSize="14"
                 Foreground="#333"
                 Margin="0,2"/>
            </StackPanel>

            <TextBlock Text="Способ получения заказа" FontWeight="SemiBold" Foreground="#A578BB" Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <RadioButton Content="Доставка"
                 GroupName="DeliveryMethodGroup"
                 IsChecked="{Binding Path=DeliveryMethod, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Доставка, Mode=TwoWay}"
                 FontSize="14"
                 Foreground="#333"
                 Margin="0,0,20,0"/>
                <RadioButton Content="Самовывоз"
                 GroupName="DeliveryMethodGroup"
                 IsChecked="{Binding Path=DeliveryMethod, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Самовывоз, Mode=TwoWay}"
                 FontSize="14"
                 Foreground="#333"/>
            </StackPanel>


            <StackPanel Visibility="{Binding DeliveryMethod, Converter={StaticResource DeliveryToVisibilityConverter}}">
                <TextBlock Text="Город" FontWeight="SemiBold" Foreground="#A578BB" Margin="0,0,0,5"/>
                <TextBox Text="{Binding City, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                         Height="30" FontSize="14" Padding="5" BorderBrush="#A578BB" BorderThickness="1" Background="White" Margin="0,0,0,15"/>

                <TextBlock Text="Адрес" FontWeight="SemiBold" Foreground="#A578BB" Margin="0,0,0,5"/>
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Улица и номер дома" FontWeight="Normal" Foreground="#A578BB" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Street, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                 Height="30" FontSize="14" Padding="5" BorderBrush="#A578BB" BorderThickness="1" Background="White"/>
                    </StackPanel>

                    <!-- Правая колонка -->
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Квартира" FontWeight="Normal" Foreground="#A578BB" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Apartment, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                 Height="30" FontSize="14" Padding="5" BorderBrush="#A578BB" BorderThickness="1" Background="White" Margin="0,0,0,10"/>

                        <TextBlock Text="Корпус (если есть)" FontWeight="Normal" Foreground="#A578BB" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Building, UpdateSourceTrigger=PropertyChanged}"
                                 Height="30" FontSize="14" Padding="5" BorderBrush="#A578BB" BorderThickness="1" Background="White"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- Выбор магазина: видим только при "Самовывоз" -->
            <StackPanel Visibility="{Binding DeliveryMethod, Converter={StaticResource PickupToVisibilityConverter}}">
                <TextBlock Text="Выберите магазин для самовывоза" FontWeight="SemiBold" Foreground="#A578BB" Margin="0,0,0,5" />
                <ComboBox ItemsSource="{Binding PickupPoints}"
                          SelectedItem="{Binding SelectedPickupPoint, UpdateSourceTrigger=PropertyChanged}"
                          Height="30"
                          FontSize="14"
                          Padding="5"
                          BorderBrush="#A578BB"
                          BorderThickness="1"
                          Background="White"
                          Margin="0,0,0,15"/>
            </StackPanel>

            <TextBlock Text="Комментарий к заказу (необязательно)" FontWeight="SemiBold" Foreground="#A578BB" Margin="0,10,0,5"/>
            <TextBox Text="{Binding Comment, UpdateSourceTrigger=PropertyChanged}"
                     Height="60" FontSize="14" Padding="5" BorderBrush="#A578BB" BorderThickness="1" Background="White" TextWrapping="Wrap" AcceptsReturn="True" />
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
            <Button Content="Отмена"
                    Width="120"
                    Height="40"
                    Background="White"
                    Foreground="#A578BB"
                    BorderBrush="#A578BB"
                    BorderThickness="2"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Margin="0,0,20,0"
                    Click="Decline_Click"/>
            <Button Content="Подтвердить заказ"
                    Width="180"
                    Height="40"
                    Background="#A578BB"
                    Foreground="White"
                    BorderBrush="#A578BB"
                    BorderThickness="2"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Command="{Binding ConfirmOrderCommand}"/>
        </StackPanel>
    </Grid>
</Window>
