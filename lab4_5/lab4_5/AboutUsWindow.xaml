<Window x:Class="lab4_5.AboutUsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="О нас"
        Height="600" Width="900"
        Background="#A578BB"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Grid Margin="30">
        <Border Background="White" CornerRadius="15" Padding="30">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <Image Source="D:\лабораторные работы\ооп\lab4_5\lab4_5\pics\AboutUsPic.jpg"
       Stretch="UniformToFill"
       VerticalAlignment="Center"
       HorizontalAlignment="Center"
       MaxHeight="Infinity"
       MaxWidth="Infinity"
       ClipToBounds="True" />




                <StackPanel Grid.Column="1" VerticalAlignment="Top" Margin="12 0 0 0">
                    <TextBlock Text="О нас"
                               FontSize="30"
