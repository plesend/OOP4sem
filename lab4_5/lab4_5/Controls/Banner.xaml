<UserControl x:Class="lab4_5.Controls.Banner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Height="167" Width="1150">

    <Grid >
        <!-- Фоновое изображение -->
        <Image Source="D:\лабораторные работы\ооп\lab4_5\lab4_5\Resources\Banner.jpg"
               Stretch="UniformToFill" />

        <Rectangle Fill="#AA000000" />

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Welcome to Our App!"
                       Foreground="White"
                       FontSize="36"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,0,0,10" />

            <TextBlock Text="Start your journey with us today."
                       Foreground="White"
                       FontSize="18"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,0,0,20" />

            <Button Content="Get Started"
                    Padding="15,8"
                    FontSize="16"
                    Background="#A578BB"
                    Foreground="White"
                    Width="160"
                    HorizontalAlignment="Center"
                    Cursor="Hand" />
        </StackPanel>
    </Grid>
</UserControl>
